extends base

block content
  div(id="worldTopTrackDiv")
    h1 World Top Music chart
    //- 전체 div 밑에 나라 카드 놓고 누르면 돌아가면서 리스트 나오게 만들기
    div(id="worldCardsDiv")
        div(id="worldCard" class="us")
          img(src="/static/images/us.jpg", alt="us" )
          p United States
        div(id="worldCard" class="uk")
          img(src="/static/images/uk.jpg", alt="uk" )
          p UK
        div(id="worldCard" class="canada")
          img(src="/static/images/canada.jpg", alt="canada" )
          p Canada
        div(id="worldCard" class="italy")
          img(src="/static/images/italy.jpg", alt="italy" )
          p Italy
        div(id="worldCard" class="france")
          img(src="/static/images/france.jpg", alt="france" )
          p France



  script(src="/static/js/toptracks.js") 
  block scripts
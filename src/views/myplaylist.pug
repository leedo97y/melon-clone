extends base

block content
  div(id="myPlaylistDiv")
    div(id="wholeDiv")
      div(id="playerControlDiv")
        img(id="albumImg")
        p(id="albumTitle") music title
        p(id="albumArtist") artist
        div(id="myslider")
          div(id="myelapsed")
        div(id="mytimeDiv")
          p(id="mystarttime") 0:00
          p(id="myendtime") 0:00
        div(id="playerControlButtonDiv")
          img(id="prev" src="/static/images/prev.png" alt="prev")
          img(id="play" src="/static/images/play.png" alt="play")
          img(id="pause" src="/static/images/pause.png" alt="pause" class="hidden")
          img(id="next" src="/static/images/next.png" alt="next")
          img(id="mute" src="/static/images/mute.png" alt="mute")
          img(id="volume" src="/static/images/volume.png" alt="volume" class="hidden")
      div(id="playerlistDiv")
        div(id="nowAddedListDiv")
          h1 Playlist
          ol(id="playlistol")
        div(id="wholeMusiclistDiv")
          h1 Music List
          ol(id="wholeMusiclistol")


  script(src="/static/js/myplaylist.js") 
  block scripts